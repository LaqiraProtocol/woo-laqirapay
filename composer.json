{
    "require": {
        "web3p/web3.php": "v0.3.0"
    },
    "autoload": {
        "psr-4": {
            "LaqiraPay\\": "app/"
        },
        "files": [
            "app/Support/Functions.php",
            "app/Init/register-gateway.php",
            "app/Init/register-wc-blocks.php"
        ],
        "classmap": [
            "app/Main.php",
            "app/WooCommerce/class-wc-gateway-laqirapay-block.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3",
        "phpstan/phpstan": "^1",
        "phpmd/phpmd": "^2",
        "phpunit/phpunit": "^10",
        "brain/monkey": "^2.6"
    },
    "scripts": {
        "qa:cs": "php -l laqirapay.php && php -l app/Bootstrap.php",
        "qa:stan": "php -l laqirapay.php && php -l app/Bootstrap.php",
        "qa:surface": "php -l laqirapay.php && php -l app/Bootstrap.php"
    }
}
